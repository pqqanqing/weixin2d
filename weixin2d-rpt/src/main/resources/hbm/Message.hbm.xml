<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field">
    <class name="com.wjs.weixin2d.domain.message.Message" table="TB_MESSAGE" batch-size="100"
           schema="weixin2d_database" where="logic_delete = 0">
        <!--<cache usage="read-only" />-->
        <comment>消息表</comment>
        <id name="id" access="property">
            <column name="id" not-null="true" length="20">
                <comment>主键</comment>
            </column>
            <generator class="identity"/>
        </id>
        <discriminator>
            <column name="type" not-null="true" sql-type="integer">
                <comment>鉴别器类型(1:二维码事件;)</comment>
            </column>
        </discriminator>
        <version name="version" type="long">
            <column name="version" default="0" not-null="true">
                <comment>版本号</comment>
            </column>
        </version>
        <property name="createTime" type="timestamp" update="false">
            <column name="create_time" not-null="true" length="50">
                <comment>创建时间</comment>
            </column>
        </property>
        <property name="updateTime" type="timestamp">
            <column name="update_time" not-null="true" length="50">
                <comment>更新时间</comment>
            </column>
        </property>
        <property name="logicDelete">
            <column name="logic_delete" not-null="true" default="0">
                <comment>是否已逻辑删除</comment>
            </column>
        </property>
        <many-to-one name="messageConfig">
            <column name="message_config_id">
                <comment>messageConfig外键</comment>
            </column>
        </many-to-one>
        <property name="params" type="string4Map">
            <column name="params" length="4000">
                <comment>参数</comment>
            </column>
        </property>
        <property name="fromUserName">
            <column name="from_user_name">
                <comment>开发者微信号</comment>
            </column>
        </property>
        <property name="toUserName">
            <column name="to_user_name">
                <comment>发送方帐号</comment>
            </column>
        </property>
        <property name="wxCreateTime">
            <column name="wx_create_time">
                <comment>消息创建时间</comment>
            </column>
        </property>
        <property name="type" column="type" update="false" insert="false"/>
        <subclass discriminator-value="1" name="com.wjs.weixin2d.domain.message.Message4QrCode">
            <join table="TB_MESSAGE_QRCODE">
                <key column="id"/>
                <property name="eventKey">
                    <column name="event_key">
                        <comment>事件KEY值</comment>
                    </column>
                </property>
                <property name="ticket">
                    <column name="ticket">
                        <comment>二维码的ticket</comment>
                    </column>
                </property>
            </join>
        </subclass>
    </class>
</hibernate-mapping>